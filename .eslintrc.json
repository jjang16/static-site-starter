{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": [
        "standard",
        "plugin:@typescript-eslint/recommended",
        "plugin:import/typescript",
        "prettier",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        "react",
        "react-hooks",
        "@typescript-eslint/eslint-plugin",
        "import",
        "prettier",
        "jsx-a11y"
    ],
    "rules": {
        "react-hooks/exhaustive-deps": [
            "warn",
            {
                "additionalHooks": "(useBoxedCallback|useAsyncCallback|useAsyncEffect)"
            }
        ]
    }
}